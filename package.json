{
  "name": "sundeck-crm",
  "version": "1.0.0",
  "description": "Sistema CRM completo para gesti√≥n de prospectos, cotizaciones y seguimiento de ventas",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "crm",
    "sales",
    "pipeline",
    "mongodb",
    "react"
  ],
  "author": "Sundeck Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "html-pdf-node": "^1.0.8",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "mongoose-paginate-v2": "^1.9.1",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.4",
    "pdfkit": "^0.17.2",
    "puppeteer": "^21.11.0",
    "puppeteer-core": "^24.22.0",
    "qrcode": "^1.5.3",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleNameMapper": {
      "^supertest$": "<rootDir>/server/tests/helpers/supertestStub.js"
    }
  }
}
